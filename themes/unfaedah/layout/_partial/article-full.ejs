
<div class="wrapper container sm:pxi-0 mx-auto overflow-x-hidden<%- theme.unfaedah.bgLight %> dark:<%- theme.unfaedah.bgDark %> dark:text-gray-200 antialiased text-gray-900 ">
  <div class="lg:w-1/3">
    <img src="https://picsum.photos/1280/720" alt="Credit: Unsplash" class="max-ww-full h-auto object-cover object-center rounded-lg shadow-md">
    <div class="relative px-4 -mt-16">
      <div class="bg-white p-6 rounded-lg shadow-lg">
        <div class="mx-auto flex flex-wrap items-baseline">
          <% if (item.tags && item.tags.length) {
            %>
            <% item.tags.forEach(function(tag) {
              %>
              <span class="bg-blue-200 text-blue-800 text-xs px-2 inline-block rounded-full  uppercase font-semibold tracking-wide"><a href="<%- url_for(tag.path) %>"><%- tag.name %></a></span>
              <%
            }); %>
            <%
          } else {
            %>
            <span class="bg-blue-200 text-blue-800 text-xs px-2 inline-block rounded-full  uppercase font-semibold tracking-wide"><%- __("Uncategories") %></span>
            <%
          } %>
        </div>
        <h4 class="mt-4 text-xl font-semibold uppercase leading-tight"><%- item.title %></h4>
        <div class="prose lg:prose-base prose-slate prose-a:text-blue-600 hover:prose-a:text-blue-500 prose-a:bg-blue-200 prose-a:rounded-full prose-headings:underline max-w-none">
          <div class="mt-4">
          <%- item.content %>
          </div>
        </div>
        <div class="mt-4 border-gray-200">
          <%- partial('comments') %>
        </div>
      </div>
    </div>
  </div>
</div>