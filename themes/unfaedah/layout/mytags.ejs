<% if (site.tags.length) { %>
    <div class="flex w-full h-full flex-wrap bg-white dark:bg-gray-3 overflow-hidden rounded shadow-md ">
      <div class="w-full p-5">
        <% site.tags.sort('name').each(function(item) { %>
         <button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"><a href="<%-config.root %><%- item.path %>"><%- item.name %></a></button> 
        <% }); %>
      </div>
    </div>
<% } %>